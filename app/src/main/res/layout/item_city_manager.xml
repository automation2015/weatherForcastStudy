<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_city_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_city_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/item_city_tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12℃"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/item_city_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/item_city_tv_temp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#808a87"/>
        <TextView
            android:id="@+id/item_city_tv_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天气：晴"
            android:textSize="16sp"
            android:layout_below="@id/item_city_line1"
            />
        <TextView
            android:id="@+id/item_city_tv_line2"
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/item_city_tv_condition"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="#808a87"
            android:layout_below="@id/item_city_line1"
            />
        <TextView
            android:id="@+id/item_city_tv_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西南风2级"
            android:layout_toRightOf="@id/item_city_tv_line2"
            android:textSize="16sp"
            android:layout_below="@id/item_city_line1"
            />
        <TextView
            android:id="@+id/item_city_tv_temprange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19~9℃"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@id/item_city_line1"
            />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
