<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
<TextView
    android:id="@+id/news_item_tv_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="hellooo"
    android:textSize="22sp"
    android:textColor="@color/black"
    android:layout_margin="10dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/news_item_iv1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@mipmap/news_bg_defualt_220x150"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/news_item_iv2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@mipmap/news_bg_defualt_220x150"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/news_item_iv3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@mipmap/news_bg_defualt_220x150"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
           />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/news_item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2020-06-15 10:30:09:91"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:layout_alignBaseline="@id/news_item_tv_source"
            />
        <TextView
            android:id="@+id/news_item_tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:text="新浪"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@mipmap/news_topic_user_default"/>
    </RelativeLayout>
</LinearLayout>
